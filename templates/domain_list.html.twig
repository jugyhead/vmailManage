{% extends 'base.html.twig' %}

{% block body %}
    <script src="/js/main.js"></script>

    <h1>List domains</h1>

    <table class="table table-bordered">
        <thead>
        <tr>
            <th>Domain</th>
            <th>Is alias domain</th>
            <th>Action</th>
        </tr>
        </thead>
        <tbody>
        {% set showNote = false %}
        {% for item in domains %}
            <tr>
                <td>{{ item.name }}</td>
                <td>{{ item.isAliasDomain ? "yes" : "no"}}</td>
                <td>
                    {#
                    {% if item.accounts|length == 0 and item.aliases|length == 0 %}
                        <a href="{{ item.id }}">edit</a>
                        <a href="#" onclick="confirmAction('{{ item.domain }}', 'delete/{{ item.id }}');">delete</a>
                    {% else %}
                        {% set showNote = true %}
                        *
                    {% endif %}
                    #}
                </td>
            </tr>
        {% endfor %}
        </tbody>
        <tfoot>
        <tr>
            <td></td>
            <td></td>
            <td><a href="new">+ new</a></td>
        </tr>
        </tfoot>
    </table>

    {% if showNote %}
        <p>*You can only delete a domain if there are no accounts or aliases referenced to it.</p>
    {% endif %}
{% endblock %}

{% extends 'base.html.twig' %}

{% block body %}
    <script src="/js/main.js"></script>

    <h1>List aliases</h1>

    <table class="table table-bordered">
        <thead>
        <tr>
            <th colspan="3">Source</th>
            <th colspan="3">Destination</th>
            <th>Enabled</th>
            <th>Action</th>
        </tr>
        </thead>
        <tbody>
        {% for item in aliases %}
            <tr>
                <td>{{ item.sourceUsername }}</td>
                <td>@</td>
                <td>{{ item.sourceDomain.name }}</td>
                <td>{{ item.destinationUsername }}</td>
                <td>@</td>
                <td>{{ item.destinationDomain }}</td>
                <td>{% if item.enabled %} yes {% else %} no {% endif %}</td>
                <td>
                    <a href="{{ item.id }}">edit</a>
                    <a href="#" onclick="confirmAction('{{ item.sourceUsername }}@{{ item.sourceDomain.name }}', 'delete/{{ item.id }}');">delete</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
        <tfoot>
        <tr>
            <td colspan="7"></td>
            <td><a href="new">+ new</a></td>
        </tr>
        </tfoot>
    </table>
{% endblock %}

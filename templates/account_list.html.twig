{% extends 'base.html.twig' %}

{% block body %}
    <script src="/js/main.js"></script>

    <h1>List accounts</h1>

    <table class="table table-bordered">
        <thead>
        <tr>
            <th>Username</th>
            <th>Domain</th>
            <th>Quota</th>
            <th>Enabled</th>
            <th>Sendonly</th>
            <th>Action</th>

        </tr>
        </thead>
        <tbody>
        {% for item in accounts %}
            <tr>
                <td>{{ item.username }}</td>
                <td>{{ item.domain.name }}</td>
                <td>{{ item.quota }}</td>
                <td>{% if item.enabled %} yes {% else %} no {% endif %}</td>
                <td>{% if item.sendonly %} yes {% else %} no {% endif %}</td>
                <td>
                    <a href="{{ item.id }}">edit</a>
                    <a href="#" onclick="confirmAction('{{ item.username }}', 'delete/{{ item.id }}');">delete</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
        <tfoot>
        <tr>
            <td colspan="5"></td>
            <td><a href="new">+ new</a></td>
        </tr>
        </tfoot>
    </table>
{% endblock %}
